{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",
            "args": [
                "src/main.c",
                "-o",
                "build/main",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lwayland-client",
            ],
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "build/main",
            "group": "build",
            "dependsOn": [
                "build"
            ]
        },
    ]
}